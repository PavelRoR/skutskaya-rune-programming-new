section#prices
	.container
		+gt('general-title-white','Выберите свой пакет участия')
		.prices-container
			.row
				.col-md-4.col-sm-4
					.packet
						.packet-head
							h4.packet-head-title
								small Пакет
								| "Серебро"
						.packet-body
							h5.packet-body-title 26 уроков в записи + 4 онлайн-урока (1 в неделю)
							p.more-button(data-toggle="modal" data-target="#modalSilver") подробнее
						.packet-footer
							p.cost.cost-full Стоимость
								span= cost_1
							p.cost.cost-sale Скидка
								span#sale-1= sale_1
							p.cost.cost-today Стоимость сегодня
								span#today-1= today_1
							a.button.button-cost(href=link_1 target="-blank")#link-1 Выбрать
				.col-md-4.col-sm-4
					.packet
						.packet-head
							h4.packet-head-title
								small Пакет
								| "Золото"
						.packet-body
							h5.packet-body-title Всё, что входит в паке СЕРЕБРО + записи закрытых тренингов: "Перевернутые руны" и "Противоречивые руны" + 4 онлайн-урока по предсказаниям
							p.more-button(data-toggle="modal" data-target="#modalGold") подробнее
						.packet-footer
							p.cost.cost-full Стоимость
								span= cost_2
							p.cost.cost-sale Скидка
								span#sale-2= sale_2
							p.cost.cost-today Стоимость сегодня
								span#today-2= today_2
							a.button.button-cost(href= link_2 target="-blank")#link-2 Выбрать
				.col-md-4.col-sm-4
					.packet
						.packet-head
							h4.packet-head-title
								small Пакет
								| "Платина"
						.packet-body
							h5.packet-body-title Всё, что входит в пакеты СЕРЕБРО и ЗОЛОТО + 3 онлайн-урока (профподготовка) + запись закрытого тренинга "Отношения и руны"
							p.more-button(data-toggle="modal" data-target="#modalPlatinum") подробнее
						.packet-footer
							p.cost Стоимость
								span= cost_3
							p.cost.cost-sale Скидка
								span#sale-3= sale_3
							p.cost.cost-today Стоимость сегодня
								span#today-3= today_3
							a.button.button-cost(href= link_3 target="-blank")#link-3 Выбрать
		.prepayment
			h4.prepaymant-title Акция!!!
			p.prepayment-text Платите 1 000р., бонусом получаете 
				span#prepayment-bonus= prep_bonus 
				br
				| На счет зачисляется 
				span#prepayment-credited= prep_cred
			a.button.prepayment-button(href= prep_link target="-blank")#prepayment-link Оплатить 1 000р.
		.timer
			h4.timer-title Скидка уменьшится через:
			.clock
			.clock-stop