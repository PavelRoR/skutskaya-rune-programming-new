#revs
	padding 70px 0
	background-color: #EDEDD1
	background-image url(../img/backgrounds/revs_bg.png)
	background-repeat no-repeat
	background-position: center
	background-size: cover
#text-revs
	.carousel-inner
		padding: 0 5px 5px
		.revs-img
			height 270px
			object-fit: contain
			object-position: center
			background-color #fff
.carousel
	width 100%
	max-width 900px
	margin 0 auto 50px
.revs-img
.video-wrapper-revs
	width 690px
	margin 0 auto
	box-shadow: 0px 3px 11.7px 1.3px rgba(0, 0, 0, 0.32);
.controls
	position: absolute
	left 0
	right 0
	margin 0 auto
	top calc(50% - 25px)
.carousel-control
	height 49px
	width 49px
	opacity 1
	text-shadow: none
	background-color: transparent
	border-radius: 50px
	border: 3px solid
	color: #34637F
	font-family: AVB
	line-height: 42px
	&:focus
		color: #34637F
	&:hover
		color: #34637F
		opacity .8
.carousel-control.left
	background-image none
.carousel-control.right
	background-image none
#video-revs
	.carousel-control
		color: #fff
		&:focus
		&:hover
			color #fff