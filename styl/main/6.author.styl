#author
	padding 50px 0
#author-img
	width 615px
	height 641px
	margin 0 auto 30px
	background-image url(../img/anna.png)
	background-repeat no-repeat
	background-position: center
	background-size contain
	box-shadow: 0 3px 29px 3px rgba(#000103, .6)
.author-title
	color #010101
	font-size: 40px
	font-family: AVB
	margin: 90px 0 45px
	text-transform: uppercase
	small
		display block
		font-size: 18px
.author-list
	li
		list-style: none
		font-size: 25px
		margin-bottom: 40px
		&:last-child
			margin-bottom: 0