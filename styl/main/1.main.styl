#main
	padding 0 0 210px
	background-color: #2E3438
	background-image url(../img/backgrounds/main_bg.jpg)
	background-repeat no-repeat
	background-position: center top
	background-size: cover
.pre
	font-size: 40px
	font-family: AVM
.main-title
	font-size: 50px
	font-family: AVB
	margin 50px 0 25px
	line-height: 52px
	span
		font-size: 56px
		display block
.form-main
	margin-top: 100px
	overflow hidden
.input
	box-shadow: 0px 3px 11.7px 1.3px rgba(0, 0, 0, 0.32);
	width 100%
	max-width: 367px;
	height: 69px;
	line-height: 69px;
	color: rgb(164, 163, 163);
	border: 0
	padding: 0 10px
	&:focus
		border: 0
@-webkit-keyframes autofill {
	to {
		color: rgb(164, 163, 163);
		background: #fff;
	}
}

input:-webkit-autofill {
	-webkit-animation-name: autofill;
	-webkit-animation-fill-mode: both;
}
.input-mail
	background-image url(../img/icons/plane.png)
	background-repeat no-repeat
	background-position: left  10px center
	background-size 32px
	padding-left: 60px
	float left
	margin-right: 30px
.button-form
	float left
.alert-message {
	display: none;
	text-align: center;
	font-size: 16px;
	padding-top: 10px;
	color: #f00
}
.checking {
	display: table;
	width 100%
	max-width 325px
	margin: 20px 0 0
	text-align: left
}

.checking .check-label {
	line-height: 20px;
	cursor: pointer;
	position: relative;
	display: table-cell;
	vertical-align: middle;
	padding: 0 0 0 45px;
	text-align: left;
	font-size: 16px
	font-family: AVL
}

.checking .check-label a
	text-decoration: underline
	display: inline
	&:focus
		text-decoration: underline
		color #fff
	&:hover
		text-decoration: none
		color #fff

.checking .check-label:before {
	content: '';
	background-color: red
	position: absolute;
	left: 0;
	top: 3px;
	width: 31px;
	height: 31px;
	border 1px solid #b6b8c0
}

.checking .check-label:after {
	content: '';
	position: absolute;
	left: 10px;
	top: -10px;
	width: 11px;
	height: 18px;
	background-color: transparent;
	opacity: 0;
	border-bottom: 4px solid #47637d
	border-right: 4px solid #47637d
	-webkit-transform: rotate(41deg);
	-ms-transform: rotate(41deg);
	transform: rotate(41deg);
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;

}

.check {
	position: absolute;
	z-index: -1;
	opacity: 0;
	width: 0;
	height 0;
	border: 0;
	left -99999px;
}

.check:checked + .check-label:before {
	background-color: transparent

}

.check:checked + .check-label:after {
	opacity: 1;
	top: 7px;
	-webkit-transition: all 0.5s ease;
	-o-transition: all 0.5s ease;
	transition: all 0.5s ease;
}