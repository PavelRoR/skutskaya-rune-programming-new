@media screen and (min-width 2295px)
	body
		font-size: 20px
	.container
		width: 1400px
	.reason
		max-width 100%
	.day-list
		width: 755px
	.day-2
		overflow hidden
		.day-list
			float: right
@media screen and (max-width 1199px)
	.contact
		margin-left: 12px
		&&-email
			padding-left:  32px
		&&-skype
		&&-tel
			padding-left: 27px
	#main
		background-position: left top
	.form-main
		margin-top: 60px
	.also-reason
		padding 20px
	.day
		padding 30px
		&-1
			background-image url(../img/backgrounds/day_1_mb_bg.png)
		&-2
			background-image: url(../img/backgrounds/day_2_mb_bg.png)
		&-list
			background-color: rgba(255,255,255,.4)
	.get-item
		height 276px
	#author-img
		width 100%
		background-size: auto
@media screen and (max-width 991px)
	#main
		padding-bottom: 40px
	#logo
		width 190px
		height 15px
		display block
		float: none
		margin 0 auto 10px
	.contacts
		float: none
		line-height: 16px
		text-align: center
	.contact
		margin 5px 5px 0
		display: inline-block
		span
			padding-left: 5px
	.main-title
		margin 30px 0 20px
	.form-main
		margin-top: 40px
	#author, #for, #plan, #also, #get, #revs
		padding: 40px 0
	.video-wrapper-for
		margin-bottom: 30px
	.for-text
		margin-bottom: 20px
	.general-title-for
		margin-top: 40px
	.reason
		padding 160px 20px 20px
		background-position: top 20px center
		text-align: center
		height 274px
	.also-reason
		height 310px
	.get-item
		height 220px
	.carousel
		padding-bottom: 60px
		margin-bottom: 30px
	#text-revs
		padding-bottom: 45px
	.controls
		top auto
		bottom: 0
		width 94%
		margin: 0 auto
	.carousel-control.right
	.carousel-control.left
		top auto
		bottom: 0
	.carousel-control
		color: #fff
		&:focus
			color #fff
		&:hover
			color #fff
			opacity .8
	#text-revs .carousel-inner .revs-img
		height 200px
	#last
		padding 40px 0 20px
	.general-title
		margin-bottom: 30px
	.last-container
		padding 40px 30px
		background-position: left  center
	.last-text
		width 64%
	.email-block-last
		max-width 350px
		margin-right: 20px
@media screen and (max-width 767px)
	#main
		text-align: center
	.pre
		font-size: 24px
	.main-title
		font-size: 30px
		span
			font-size: 38px
	.email-block
		float: none
		margin 0 auto 10px
	.button-form
		float: none
		max-width 400px
	.checking
		margin 10px auto 0
	.reason
	.also-reason
	.get-item
		max-width 320px
		height auto
		margin-bottom: 25px
	.get-item
		margin-bottom: 50px
	#myModal
		.modal-dialog
			width 100%
			max-width 560px
			margin 10px auto 0
	.email-block-modal
	.email-block-last
		max-width 400px
	.day-list
		padding 30px
	#author-img
		width 287px
		height 300px
		background-size contain
	.author-title
		margin 30px 0 20px
	.author-title
		text-align: center
	.last-container
		text-align: center
	.last-text
		margin 0 auto 10px
	.revs-img, .video-wrapper-revs
		width 100%
@media screen and (max-width 485px)
	header
		margin-bottom: 0
	#logo
		width 160px
		height 14px
		margin-bottom: 5px
	.contact
		line-height: 14px
		font-size: 12px
		&&-email
			padding-left: 20px
		&&-skype
		&&-tel
			padding-left: 17px
	.pre
		font-size: 20px
	.main-title
		font-size: 22px
		margin 20px 0 10px
		line-height: 28px
		span
			font-size: 30px
	.checking .check-label
		font-size: 14px
	.form-main
		margin-top: 30px
	.general-title
		font-size: 26px
		margin-bottom: 30px
		&-for
			margin-top: 30px
	.day
		padding 20px
		&-title
			font-size: 40px
			margin 0 0 20px
	.author-list li
		font-size: 20px
		margin-bottom: 20px
	.last-text
		width 100%
	.last-container
		margin-top: 30px
		padding 20px
	.form-last
		margin-top: 30px
	.day-list
		padding 20px
	#text-revs .carousel-inner .revs-img
		height 150px
@media screen and (max-width 380px)
	.pre
		font-size: 16px
	.main-title
		font-size: 20px
		span
			font-size: 22px
	.for-text
		font-size: 18px
	.general-title
		font-size: 20px
		margin-bottom: 20px
		&-for
			margin-top: 20px
		&-get
			margin-bottom: 50px
	.reason
		padding 150px 15px 15px
		background-position: top 15px center
	.also-reason
	.day
	.day-list
	.last-container
		padding 15px
	.day
		margin-bottom: 25px
	.day-title
		font-size: 36px
		margin-bottom: 15px
	.day-list
		background-color: rgba(255,255,255,.8)
	.day-list li
		color: initial
		margin-bottom: 10px
	.get-item
		padding 60px 15px 15px
		&-title
			font-size: 110px
	#author-img
		width 250px
		height 260px
	.author-title
		font-size: 26px
	.author-list li
		font-size: 18px
		margin-bottom: 10px
	#text-revs .carousel-inner .revs-img
		height 90px
	footer
		font-size: 12px
		padding 15px 0
	.politics_modal-content .modal-title
		font-size: 20px