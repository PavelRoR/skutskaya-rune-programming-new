.modal-backdrop.in
	opacity .8
.mail-modal-content
	background-color: #2E3438
	background-image url(../img/backgrounds/main_bg.png)
	background-repeat no-repeat
	background-position: left top
	background-size: cover
	color #fff
	padding-top: 30px
	text-align: center
button.close
	position absolute
	width: 35px
	height 35px
	border-radius: 50px
	line-height: 30px
	text-align: center
	font-size: 24px
	color: #000
	background-color: #F0F0F0
	top 10px
	right 10px
	left auto
	z-index 99
	opacity 1
	transition: all .1s ease-in-out
	&:hover
		color: #F0F0F0
		background-color: #000
.modal-text
	font-size: 20px
	margin-bottom: 20px
.input-mail-modal
	float: none
	display block
	margin 0 auto 10px
.button-modal
	float: none
	max-width 367px
.checking-modal
	margin 10px auto 0
.politics_modal-content
	background-color #fff
	background-image none
	.modal-title
		font-size: 24px
		text-align: left 
		width 100%
		max-width 90%
		font-family: AVB
		small
			display: block
	p
		font-size: 16px
		margin-bottom: 15px
		text-align: left
.modal_mail_section_title
	margin 10px auto 20px
	width 100%
	max-width 85%