.plan-packet
	padding 20px
	box-shadow: 0px 3px 11.7px 1.3px rgba(0, 0, 0, .32)
.plan-packet-title
	font-size: 24px;
	font-family: AVB
	text-align: center
.plan-packet-subtitle
	font-family: AVM
	color: rgb(45, 34, 51);
	line-height: 1.5;
	margin:10px 0 20px
	font-size: 18px
	text-align: center
.plan-packet-list
	margin-left: 20px
	li
		list-style-position: inside;
		line-height: 1.3;
		margin-bottom: 10px
		position relative
		padding-left: 15px
		list-style: none
		&:before
			content ''
			display block
			position: absolute;
			width: 8px;
			height: 8px;
			border-radius: 50px
			background-color: #000
			top 7px
			left 0
		&:last-child
			margin-bottom: 0
.plan-container-bonus
	margin-top: 10px
	span
		font-size: 18px
		font-family: AVB
		color #140a5c
		display block
		margin-bottom: 5px