#plan
	padding 50px 0
.plan-tabs
	width 100%
	max-width: 900px;
	margin 0 auto 40px
.plan-tabs-buttons
	width 100%
	text-align: center
	margin-bottom: 20px
	li
		display: inline-block
		cursor pointer
		font-size: 20px
		width 100%
		max-width 150px
		height 45px
		line-height 43px
		background-color: #646C72
		color #fff
		transition: all .3s ease-out
		border 1px solid #646C72
		&:nth-child(2)
			margin 0 15px
		&:hover
			border 1px solid #646C72
			background-color: #000
			color #fff
	.active
		border 1px solid #646C72
		background-color: #000
		color #fff
