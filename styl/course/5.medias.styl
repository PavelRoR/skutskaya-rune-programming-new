@media screen and (min-width 2295px)
	body
		font-size: 20px
	.container
		width 1400px
	.get-packet-list li
		&:first-child
		&:nth-child(2)
			max-width 570px
	.plan-packet-subtitle
		font-size: 22px
@media screen and (max-width 1199px)
	.get-packet
		float: none
		margin-left: auto
		margin-right: auto
		width 100%
		max-width 900px
	.modal-dialog
		max-width 100%
		width 90%
	#author-img
		width 100%
		background-size: auto
@media screen and (max-width 991px)
	#main
		padding-bottom: 40px
		text-align: center
	#logo
		width 190px
		height 15px
		display block
		float: none
		margin 0 auto 10px
	.contacts
		float: none
		line-height: 16px
		text-align: center
	.contact
		margin 5px 5px 0
		display: inline-block
		span
			padding-left: 5px
	.main-subtitle
		margin 0 auto 40px
	.button-main
		margin 30px auto 0
	#plan
	#get
	#prices
	#feedback
	#revs
	#author
		padding 40px 0
	#tasks
		padding 40px 0 0
	.get-packet-title
		position: static
		margin-bottom: 10px
	.packet-body
		min-height 242px
	.carousel
		padding-bottom: 60px
		margin-bottom: 30px
	#text-revs
		padding-bottom: 45px
	.controls
		top auto
		bottom: 0
		width 94%
		margin: 0 auto
	.carousel-control.right
	.carousel-control.left
		top auto
		bottom: 0
	.carousel-control
		color: #fff
		&:focus
			color #fff
		&:hover
			color #fff
			opacity .8
	#text-revs .carousel-inner .revs-img
		height 200px
	.general-title
		margin-bottom: 30px
@media screen and (max-width 767px)
	header
		margin-bottom: 0
	.main-title
		margin-top: 30px
		font-size: 40px
	.plan-tabs-buttons li
		max-width 120px
		&:nth-child(2)
			margin 0 10px
	.get-packet-title
		font-size: 50px
		line-height: 50px
	.packet-body
		min-height 1px
	#author-img
		width 287px
		height 300px
		background-size contain
	.author-title
		margin 30px 0 20px
	.author-title
		text-align: center
	.modal-dialog
		margin 10px auto
	.revs-img, .video-wrapper-revs
		width 100%
