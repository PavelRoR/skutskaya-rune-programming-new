#prices
	padding 50px 0
	background-color: #1b2826;
	background-image: url("../img/backgrounds/get_bg.png");
	background-repeat: no-repeat;
	background-position: center;
	background-size: cover;
	position relative
	&:before
		@extend #main:before
	.container
		@extend #main .container
.prices-container
	width 100%
	// max-width 650px
	// margin 0 auto
.packet
	width 100%
	max-width 320px
	margin 0 auto 25px
	background-color: #fff
	text-align: center
	padding 20px
	box-shadow: 0 0 13px 5px rgba(255, 255, 255, .62)
.packet-head
	padding 0 0 20px
.packet-head-title
	font-size: 22px
	font-family: AVB
	text-transform: uppercase
	color #140a5c
	small
		color #140a5c
		display block
		font-size: 60%
		text-transform: none
		font-family: AV
.packet-body
	padding 20px 0
	border-top: 1px solid #140a5c
	border-bottom: 1px solid #140a5c
	min-height 180px
.packet-body-title
	font-size: 16px
	font-family: AV
	margin-bottom: 10px
	color #000
.more-button
	color #140a5c
	font-size: 14px
	border-bottom: 1px dotted
	display: inline-block
	cursor pointer
.packet-footer
	padding 20px 0 0
.cost
	font-size: 22px
	font-family: AVL
	color #140a5c
	margin-bottom: 20px
	span
		display block
		font-family: AVB
		font-size: 26px
.cost-full
	span
		text-decoration: line-through
.cost-sale
	color red
.cost-today
	color green
.prepayment
	width 100%
	max-width 650px
	margin 0 auto
	text-align: center
.prepaymant-title
	font-size: 32px
	font-family: AVB
	color red
.prepayment-text
	display: inline-block
	font-size: 20px
	color #fff
	margin 15px 0
.timer-title
	font-size: 32px
	text-align: center
	color #f00
	margin: 30px 0 0
	font-family: AVB
.alert-danger
	color: #a94442;
	background-color: #f2dede;
	padding: 10px;
	width 100%
	max-width 360px
	margin 20px auto 0
	border: 1px solid #ebccd1;
	border-radius: 4px;
	font-size: 22px;
	text-align: center
.flip-clock-wrapper
	width: 100%
	max-width 460px
.flip-clock-divider .flip-clock-label
	color #fff
.flip-clock-dot
	background-color: #0056c2
.flip-clock-wrapper ul li a div div.inn
	color: #fff
	background-color: #0056c2
	text-shadow: 2px 2px 2px rgba(#022a37,.6);
.modal-dialog
	width 900px
.mail-modal-content
	background-color: #000
	border-radius: 0
	padding 20px 15px
button.close
	position absolute
	width: 35px
	height 35px
	border-radius: 5px
	line-height: 30px
	text-align: center
	font-size: 24px
	color: #000
	background-color: #F0F0F0
	top 10px
	right 10px
	left auto
	z-index 99
	opacity 1
	transition: all .1s ease-in-out
	&:hover
		color: #F0F0F0
		background-color: #000
.modal-title
	font-size: 22px
	font-family: AVB
	color rgba(255,255,255,.8)
.modal-subtitle
	font-size: 20px
	margin  15px 0
	color rgba(255,255,255,.8)
.modal-list
	margin-left: 15px
	li
		color: rgba(255,255,255,.9);
		&:before
			background-color:rgba(255,255,255,.9);
.modal-bonus
	font-size: 18px
	margin-top: 10px
	color: rgba(255,255,255,.9);
	span
		display block
		font-family: AVM