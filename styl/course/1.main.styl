#main
	padding 0 0 60px
	background-color: #2E3438
	background-image url(../img/backgrounds/main_bg.png)
	background-repeat no-repeat
	background-position: left top
	background-size: cover
	color #fff
	position relative
	&:before
		content: ''
		display block
		position: absolute
		top 0
		left 0
		right 0
		bottom 0
		width 100%
		height 100%
		background-color: rgba(#2E3438,.7)
		z-index 0
	.container
		position relative
		z-index 9
.pre
	font-size: 40px
	font-family: AVM
.main-title
	font-size: 50px
	font-family: AVB
	margin 50px 0 0
	line-height: 52px
	width 100%
	max-width 700px
	text-transform: uppercase
	small
		font-size: 22px
		display block
.main-subtitle
	font-size: 30px
	font-family: AVM
	max-width 600px
	margin-bottom: 40px
.main-text
	font-size: 20px
	margin-bottom: 20px
	span
		display inline-block
		font-family: AVB
.button-main
	margin 40px 0 0