@import '../css/_css/bootstrap.min.css'

body
	font-family: AV
	font-size: 18px
	line-height: 1.3
	color: #000
*
	margin 0
	padding 0
	outline none

a
	color: #fefefe
	&:focus
		outline: 0
	&:hover
		text-decoration none
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.video-wrapper
	margin 0 auto
	position relative
	width 100%
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		background-color #000
		border-radius 3px
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
.button
	display: block
	margin 0 auto
	background-color: #140a5c
	box-shadow: 0px 3px 11.7px 1.3px rgba(0, 0, 0, 0.32);
	width 100%
	max-width: 270px;
	line-height: 69px;
	text-align: center
	font-size: 25px;
	color: rgb(255, 255, 255);
	text-decoration: none
	// transition: all .3s ease
	&:focus
		text-decoration: none
		color #fff
	&:hover
		text-decoration: none 
		color #fff
		background-color: #140a5c + 10%
.general-title
	text-align: center
	font-size: 26px;
	font-family: AVB
	color: rgb(0, 0, 0);
	line-height: 1.25;
	margin-bottom: 45px
	text-transform: uppercase
	&-white
		color #fff

